-# in app/views/items/index.html.haml

%div.ind_header
  %h2 Available Items
  %h4= link_to 'Create Listing', new_item_path
  
- @items.each do |item|
  %div.listing
    %div.l_left
      %div= link_to "#{item.title}", item_path(item)
      %div= item.description
    %div.l_right
      %div
        %div Condition:
        %div.right= item.condition
      %div
        %div Status:
        %div.right= item.status